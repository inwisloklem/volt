.form
  display: flex
  flex-direction: column
  justify-content: space-between

  @media $tablet-desktop
    flex-direction: row
    justify-content: space-between

  &__name
  &__btn
  &__phone
    width: 100%

  &__name
  &__btn
    @media $desktop
      max-width: 365px

  &__phone
    @media $desktop
      max-width: 350px

  &__name
  &__phone
    margin-bottom: 20px
    box-sizing: border-box
    padding: 0 25px
    height: 60px
    outline: none
    border: none
    border-radius: 30px
    color: $tundora
    background-color: $athens-gray
    font(1.125em, normal, 400)

    transition: all 0.4s ease-in

    &::-webkit-input-placeholder
      color: $dusty-gray
      
    &:focus
      box-shadow: 0 0 25px 0 $supernova

    @media $tablet
      margin-right: 10px

    @media $tablet-desktop
      margin-bottom: 0